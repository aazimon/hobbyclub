<!DOCTYPE html>
<html>
   {{>layout/head}}
   <body onload="activateStateCity()">
      {{>layout/heading}}
      <div class="container">
         <div class="row">
            <div class="col-md-6">
               <h1>Find your Club</h1>
               <form method="post" action="/searchClubs">
                  <div class="row mx-1">
                     <input type="search" class="form-control" id="clubName" name="clubName" placeholder="Search for Club"{{#clubName}} value="{{clubName}}"{{/clubName}}>
                  </div>
                  <div class="row">
                     <div class="col-md-6">
                        <h3>Club Categories</h3>
                        <select class="form-select" id="categoryId" name="categoryId" aria-label="Select Club Type">
                           {{#categoryDropDown}}
                           <option value="{{value}}" {{#selected}}selected{{/selected}}>{{label}}</option>
                           {{/categoryDropDown}}
                        </select>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-md-6">
                        <h3>Location: State</h3>
                        <select class="form-select" id="stateId" name="stateId" aria-label="Select State">
                           {{#stateDropDown}}
                           <option value="{{value}}" {{#selected}}selected{{/selected}}>{{label}}</option>
                           {{/stateDropDown}}
                        </select>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-md-6">
                        <h3>Location: Nearest City</h3>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-md-4">
                        <select class="form-select" id="cityId" name="cityId" aria-label="Select Club Type">
                           {{#cityDropDown}}
                           <option value="{{value}}" {{#selected}}selected{{/selected}}>{{label}}</option>
                           {{/cityDropDown}}
                        </select>
                     </div>
                     <div class="col">
                        <button aria-roledescription="search results will appear in new page">Find</button>
                     </div>
                  </div>
                  <div class="row"><div class="col-md-6">&nbsp;</div></div>
               </form>
            </div>
            <div class="col-md-6">
               <h1>Most Popular Clubs for Search Results</h1>
               {{#mostPopular}}
               <div class="card mx-2 p-3">
                  <div class="card-body">
                     <h2>{{title}}</h2>
                     <p>{{description}}</p>
                     <a href="/clubHome/{{id}}">View</a>
                  </div>
               </div>
               {{/mostPopular}}
               {{^mostPopular}}
               <div class="card mx-2 p-3">
                  <div class="card-body">
                     <h2>No clubs available.</h2>
                  </div>
               </div>
               {{/mostPopular}}
            </div>
         </div>
         {{#popularClubs}}
         <div class="row">
            <div class="col-md-6">
               <div class="card mx-2 p-3">
                  <div class="card-body">
                     <h2>{{first.title}}</h2>
                     <p>{{first.description}}</p>
                     <a href="/clubHome/{{first.id}}">View</a>
                  </div>
               </div>
            </div>
            <div class="col">
               <div class="card mx-2 p-3">
                  <div class="card-body">
                     <h2>{{second.title}}</h2>
                     <p>{{second.description}}</p>
                     <a href="/clubHome/{{second.id}}">View</a>
                  </div>
               </div>
            </div>
         </div>
         {{/popularClubs}}
         {{#lastClub}}
         <div class="row">
            <div class="col-md-6">
               <div class="card mx-2 p-3">
                  <div class="card-body">
                     <h2>{{title}}</h2>
                     <p>{{description}}</p>
                     <a href="/clubHome/{{id}}">View</a>
                  </div>
               </div>
            </div>
            <div class="col"></div>
         </div>
         {{/lastClub}}
      </div>
      {{>layout/cities}}
   </body>
</html>

